<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black" >

    <com.open.welinks.customView.HackyViewPager
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/pager"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <include layout="@layout/view_back_view" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginTop="48dp"
        android:background="#ffff" />

    <RelativeLayout
        android:id="@+id/menuOptions"
        android:layout_width="146dp"
        android:layout_height="95dp"
        android:layout_gravity="right"
        android:layout_marginTop="48dp"
        android:background="#999999"
        android:visibility="gone" >

        <RelativeLayout
            android:id="@+id/saveOption"
            android:layout_width="146dp"
            android:layout_height="47dp"
            android:background="#b2000000" >

            <ImageView
                android:id="@+id/saveImageOption"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:src="@drawable/confirm_stick" />

            <TextView
                android:id="@+id/saveTextOption"
                android:layout_width="116dp"
                android:layout_height="47dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="保存"
                android:textColor="#fff" />
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="47dp"
            android:background="#000" />

        <RelativeLayout
            android:id="@+id/shareOption"
            android:layout_width="146dp"
            android:layout_height="47dp"
            android:layout_marginTop="48dp"
            android:background="#b2000000" >

            <ImageView
                android:id="@+id/shareImageOption"
                android:layout_width="20dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="30dp"
                android:src="@drawable/delete_message" />

            <TextView
                android:id="@+id/shareTextOption"
                android:layout_width="116dp"
                android:layout_height="47dp"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="20dp"
                android:gravity="center"
                android:text="分享"
                android:textColor="#fff" />
        </RelativeLayout>
    </RelativeLayout>

</FrameLayout>